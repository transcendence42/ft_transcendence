    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/typeorm": "^7.1.5",
    "@types/graphql": "^14.5.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "16.0.4",
    "admin-bro": "^4.0.1",
    "admin-bro-expressjs": "^2.1.1",

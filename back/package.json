    "express": "^4.17.1",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.2",
    "graphql": "^15.5.1",
    "graphql-subscriptions": "^1.2.1",
    "joi": "^17.4.1",
    "passport": "^0.4.1",
    "passport-42": "^1.2.6",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
